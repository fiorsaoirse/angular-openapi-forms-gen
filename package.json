{
  "name": "angular-openapi-form-gen",
  "version": "0.1.3",
  "description": "Generates Angular Reactive forms as multiply files with formGroup definition from open-api YAML or JSON",
  "main": "dist/main.js",
  "bin": "dist/bin/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiorsaoirse/angular-openapi-forms-gen.git"
  },
  "keywords": [
    "angular",
    "openapi",
    "forms",
    "reactive forms",
    "generation",
    "auto-gen"
  ],
  "homepage": "https://github.com/fiorsaoirse/angular-openapi-forms-gen#readme",
  "bugs": {
    "url": "https://github.com/fiorsaoirse/angular-openapi-forms-gen/issues"
  },
  "scripts": {
    "test": "jest",
    "build": "npm run build:ts & npm run build:types",
    "build:types": "tsc",
    "build:ts": "babel src --out-dir dist --extensions \".ts\" --source-maps inline",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "lint": "npm run lint:src && npm run lint:ts",
    "lint:src": "node node_modules/eslint/bin/eslint \"src/**/*.{ts,tsx}\"",
    "lint:src:fix": "npm run lint:src -- --fix",
    "lint:ts": "tsc --noEmit",
    "lint:ts:w": "npm run lint:ts -- --watch"
  },
  "author": "Maria Kovsharova",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/plugin-transform-typescript": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/commander": "^2.12.2",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/prettier": "^2.1.5",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.0.2",
    "@babel/runtime": "^7.12.5",
    "camelcase": "^6.2.0",
    "commander": "^6.2.1",
    "prettier": "^2.2.1",
    "openapi-types": "^7.0.1"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "node_modules"
    ]
  }
}
