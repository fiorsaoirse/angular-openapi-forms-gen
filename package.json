{
  "name": "ngx-openapi-form-gen",
  "version": "1.0.0",
  "description": "Generates Angular forms as multiply files from open-api YAML or JSON. It is possible to generate Reactive-driven or Template-driven forms",
  "main": "dist/main.js",
  "bin": "dist/bin/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "angular",
    "openapi",
    "forms",
    "reactive forms",
    "generation",
    "generator"
  ],
  "homepage": "",
  "bugs": {
    "url": ""
  },
  "scripts": {
    "test": "jest",
    "build": "npm run build:ts & npm run build:types",
    "build:types": "tsc",
    "build:ts": "babel src --out-dir dist --extensions \".ts\" --source-maps inline",
    "prettier-format": "prettier --config .prettierrc src/**/*.ts --write",
    "lint": "npm run lint:src && npm run lint:ts",
    "lint:src": "node node_modules/eslint/bin/eslint \"src/**/*.{ts,tsx}\"",
    "lint:src:fix": "npm run lint:src -- --fix",
    "lint:ts": "tsc --noEmit",
    "lint:ts:w": "npm run lint:ts -- --watch"
  },
  "author": "Maria Kovsharova",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/node": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.13.8",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/plugin-transform-typescript": "^7.13.0",
    "@babel/preset-env": "^7.13.10",
    "@babel/preset-typescript": "^7.13.0",
    "@types/commander": "^2.12.2",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@types/prettier": "^2.2.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.0.2",
    "@babel/runtime": "^7.13.10",
    "camelcase": "^6.2.0",
    "commander": "^7.1.0",
    "prettier": "^2.2.1",
    "openapi-types": "^7.2.3"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      "node_modules"
    ]
  }
}