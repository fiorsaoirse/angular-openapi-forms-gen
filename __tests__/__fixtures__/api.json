{
  "openapi": "3.0.3",
  "info": {
    "description": "Test OpenApi Data",
    "version": "1.0.0",
    "title": "Test OpenApi Data"
  },
  "paths": {
    "/users": {
      "get": {
        "tags": [
          "users"
        ],
        "description": "Get list of users",
        "responses": {
          "200": {
            "description": "OK"
          },
          "403": {
            "description": "Method not allowed"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "IBaseEntity": {
        "type": "object",
        "properties": {
          "objectId": {
            "type": "string",
            "readOnly": true
          }
        }
      },
      "IBaseCardEntity": {
        "allOf": [
          {
            "$ref": "#/components/schemas/IBaseEntity"
          },
          {
            "type": "object",
            "properties": {
              "modifyDate": {
                "type": "string",
                "format": "date-time",
                "readOnly": true
              }
            }
          }
        ]
      },
      "User": {
        "allOf": [
          {
            "$ref": "#/components/schemas/IBaseEntity"
          },
          {
            "type": "object",
            "properties": {
              "login": {
                "type": "string",
                "pattern": "^[a-zA-Z]&"
              },
              "address": {
                "type": "string",
                "format": "email"
              },
              "description": {
                "type": "string"
              },
              "roles": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Roles"
                }
              },
              "active": {
                "type": "boolean",
                "default": false
              }
            },
            "required": [
              "login",
              "address",
              "active"
            ],
            "xml": {
              "name": "User"
            }
          }
        ]
      },
      "UserCard": {
        "allOf": [
          {
            "$ref": "#/components/schemas/IBaseCardEntity"
          },
          {
            "$ref": "#/components/schemas/User"
          },
          {
            "type": "object",
            "properties": {
              "password": {
                "type": "string"
              },
              "name": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ],
            "xml": {
              "name": "UserCard"
            }
          }
        ]
      },
      "Group": {
        "allOf": [
          {
            "$ref": "#/components/schemas/IBaseEntity"
          },
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^[a-zA-Z0-9]&",
                "minLength": 5,
                "maxLength": 20
              },
              "description": {
                "type": "string"
              }
            },
            "xml": {
              "name": "Group"
            }
          }
        ]
      },
      "GroupCard": {
        "allOf": [
          {
            "$ref": "#/components/schemas/IBaseCardEntity"
          },
          {
            "$ref": "#/components/schemas/Group"
          },
          {
            "type": "object",
            "properties": {
              "users": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/User"
                }
              },
              "childGroups": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Group"
                }
              },
              "parentGroups": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Group"
                }
              },
              "address": {
                "type": "string",
                "format": "email"
              }
            },
            "xml": {
              "name": "GroupCard"
            }
          }
        ]
      },
      "Roles": {
        "type": "string",
        "enum": [
          "admin",
          "user"
        ],
        "xml": {
          "name": "Roles"
        }
      }
    }
  }
}